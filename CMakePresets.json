{
  "version": 3,
  "configurePresets": [
    {
      "hidden": true,
      "name": "Qt",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "QT_DIR": "$env{QT_ROOT}/lib/cmake",
        "Qt6_DIR": "$env{QT_ROOT}/lib/cmake/Qt6",
        "CMAKE_PREFIX_PATH": "$env{QT_ROOT}",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ]
}